<div class="posts-wrapper row">
  <div class="post">

    <div class="post-head">
      <div class="name"><%= @post.user.user_name %></div>
    </div>

    <div class="image center-block"><%= link_to (image_tag @post.image.url(:medium), class:'img-responsive'), post_path(@post) %></div>

    <p><%= @post.caption %></p>

    <% if current_user.id == @post.user.id %>
      <div class="text-center"><%= link_to "Cancel", posts_path%></div>
      <div class="text-center edit-links"><%= link_to "Edit Post", edit_post_path(@post) %></div>
    <% else %>
      <div class="text-center"><%= link_to "Cancel", posts_path%></div>
    <% end %>
  </div>
</div>
